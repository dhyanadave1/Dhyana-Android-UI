<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".OnBoardingScreenActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/btnSecond"
        android:background="@drawable/default_dot"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_25sdp"/>

    <ImageButton
        android:id="@+id/btnThird"
        android:layout_width="@dimen/_25sdp"
        android:background="@drawable/default_dot"
        android:layout_height="@dimen/_15sdp"
        app:layout_constraintStart_toEndOf="@id/btnSecond"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_25sdp"/>

    <ImageButton
        android:id="@+id/btnFirst"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_15sdp"
        android:scaleType="fitXY"
        android:background="@drawable/selected_dot"
        android:layout_marginRight="@dimen/_5sdp"
        app:layout_constraintEnd_toStartOf="@id/btnSecond"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_25sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>